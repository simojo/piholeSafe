#! /usr/bin/env sh

# Pi-hole_SafeSearch.sh --enable

set -e

setDomains() {
  if [[ $1 != "" ]]; then
    pihole -b $1
  fi
}

domains=""
i=0

while read thisDomain; do
  domains="$domains $thisDomain"
  if [[ $i == 9 ]]; then
    setDomains "$domains"
    domains=""
    i=0
  else
    i=$(($i + 1))
  fi
done <domains.txt

setDomains $domains

pihole restartdns

echo -e "[\e[32m*\e[0m] Enabled"
